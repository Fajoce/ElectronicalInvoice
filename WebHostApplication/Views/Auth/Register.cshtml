@model WebHostApplication.Models.Usuarios.Usuario
@{
   
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Registrar Usuario";
}


<div class="container mt-1">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card shadow border-1">
                <div class="card-body">
                    <h3 class="text-center text-success mb-4">Registrar Nuevo Usuario</h3>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form asp-action="Register" method="post">
                        <div class="mb-3">
                            <label class="form-label">Usuario</label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Contraseña</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            <input asp-for="Nombre" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Rol</label>
                            <input asp-for="Rol" class="form-control" placeholder="Ejemplo: Admin, Usuario" />
                        </div>

                        <button type="submit" class="btn btn-success w-100">Registrar</button>

                        <div class="text-center mt-3">
                            <a asp-action="Login" class="text-decoration-none">Volver al login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>