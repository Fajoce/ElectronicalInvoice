@model IEnumerable<WebHostApplication.ViewModels.Facturas.FacturaListDTO>

<h2>Listado de Facturas</h2>
<a asp-action="Create" class="btn btn-primary">Nueva Factura</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Número</th>
            <th>Cliente</th>
            <th>Cajero</th>
            <th>Vendedor</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>Detalles</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var factura in Model)
        {
            <tr>
                <td>@factura.IdFactura</td>
                <td>@factura.Cliente</td>
                <td>@factura.Cajero</td>
                <td>@factura.Vendedor</td>
                <td>@factura.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@factura.Total</td>
                <td>@factura.CantidadDetalles</td>
                <td>
                    <a asp-action="Details" asp-route-id="@factura.IdFactura" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@factura.IdFactura" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@factura.IdFactura" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>