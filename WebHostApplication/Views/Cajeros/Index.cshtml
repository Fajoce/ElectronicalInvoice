@model IEnumerable<WebHostApplication.Models.Cajero>

@{
    ViewData["Title"] = "Cajeros";
}

<div class="container mt-4">
    <h2 class="fw-bold text-primary mb-3 text-center">👨‍💼 Listado de Cajeros</h2>

    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <a asp-action="Create" class="btn btn-success">
            ➕ Nuevo Cajero
        </a>
    </div>

    <!-- 📌 Tabla para pantallas medianas en adelante -->
    <div class="table-responsive shadow-sm rounded d-none d-md-block">
        <table class="table table-striped table-bordered align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Primer Apellido</th>
                    <th>Segundo Apellido</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.PrimerApellido</td>
                        <td>@item.SegundoApellido</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.IdCajero" class="btn btn-primary btn-sm">✏️ Editar</a>
                                <a asp-action="Details" asp-route-id="@item.IdCajero" class="btn btn-info btn-sm">🔎 Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.IdCajero" class="btn btn-danger btn-sm">🗑 Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- 📌 Vista "cards" para celulares -->
    <div class="d-md-none">
        @foreach (var item in Model)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title fw-bold text-primary">@item.Nombre @item.PrimerApellido</h5>
                                      
                    <div class="d-grid gap-2 mt-3">
                        <a asp-action="Edit" asp-route-id="@item.IdCajero" class="btn btn-primary btn-sm">✏️ Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdCajero" class="btn btn-info btn-sm">🔎 Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdCajero" class="btn btn-danger btn-sm">🗑 Eliminar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>