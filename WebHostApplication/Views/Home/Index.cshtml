@{
    ViewData["Title"] = "Inicio";
}
<div class="content-wrapper">
    <header class="navbar d-flex justify-content-between align-items-center px-3 py-2 bg-light shadow-sm">
        <div class="d-flex align-items-center gap-3">
            <span id="fechaHora" class="text-muted small"></span>
        </div>
       
    </header>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const fechaHora = document.getElementById("fechaHora");

            function actualizarFechaHora() {
                const ahora = new Date();
                const opciones = {
                    weekday: 'long', year: 'numeric', month: 'long',
                    day: 'numeric', hour: '2-digit', minute: '2-digit', second: '2-digit'
                };
                fechaHora.textContent = ahora.toLocaleString('es-ES', opciones);
            }

            actualizarFechaHora(); // mostrar inmediatamente
            setInterval(actualizarFechaHora, 1000); // actualizar cada segundo
        });
    </script>
}
