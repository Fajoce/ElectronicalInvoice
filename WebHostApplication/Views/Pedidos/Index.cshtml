@model IEnumerable<WebHostApplication.Models.Pedidos.Pedido>

@{
    ViewData["Title"] = "Listado de Pedidos";
}

<div class="container-fluid px-2 px-md-4 py-3">
    <!-- 🔹 Encabezado -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <div>
            <h2 class="fw-bold text-primary mb-1">📦 Listado de Pedidos</h2>
            <p class="text-muted small mb-0">Consulta, edita o elimina los pedidos registrados</p>
        </div>
        <a asp-action="Create" class="btn btn-success fw-semibold shadow-sm rounded-3">
            ➕ Nuevo Pedido
        </a>
    </div>

    <!-- 🔹 Tabla (solo visible en pantallas medianas y grandes) -->
    <div class="table-responsive shadow-sm rounded-3 border d-none d-md-block">
        <table class="table table-striped align-middle text-center mb-0">
            <thead class="table-primary text-nowrap">
                <tr>
                    <th>👤 Cliente</th>
                    <th>📅 Fecha</th>
                    <th>💳 Forma de Pago</th>
                    <th>💰 Total</th>
                    <th>⚙️ Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@p.Cliente?.Nombre</td>
                            <td>@p.Fecha.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="badge bg-info text-dark px-3 py-2">@p.FormaPago</span>
                            </td>
                            <td class="text-success fw-bold">@p.Total.ToString("C")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@p.Id"
                                       class="btn btn-outline-info btn-sm rounded-start">🔎</a>
                                    <a asp-action="Edit" asp-route-id="@p.Id"
                                       class="btn btn-outline-warning btn-sm">✏️</a>
                                    <a asp-action="Delete" asp-route-id="@p.Id"
                                       class="btn btn-outline-danger btn-sm rounded-end"
                                       onclick="return confirm('¿Seguro que deseas eliminar este pedido?');">🗑️</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-3">
                            No hay pedidos registrados actualmente.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- 🔹 Cards (solo visible en móviles) -->
    <div class="d-md-none">
        @if (Model.Any())
        {
            @foreach (var p in Model)
            {
                <div class="card mb-3 shadow-sm border-0 rounded-4">
                    <div class="card-body p-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h6 class="fw-bold text-primary mb-0">@p.Cliente?.Nombre</h6>
                            <span class="badge bg-info text-dark small">@p.FormaPago</span>
                        </div>

                        <p class="mb-1 text-muted small">
                            📅 @p.Fecha.ToString("dd/MM/yyyy")
                        </p>

                        <p class="fw-semibold mb-0 text-success">
                            💰 Total: @p.Total.ToString("C")
                        </p>

                        <!-- Botones en rejilla -->
                        <div class="d-grid gap-2 mt-3">
                            <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-outline-primary btn-sm fw-semibold">
                                🔎 Ver Detalles
                            </a>
                            <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-outline-warning btn-sm fw-semibold">
                                ✏️ Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@p.Id"
                               class="btn btn-outline-danger btn-sm fw-semibold"
                               onclick="return confirm('¿Seguro que deseas eliminar este pedido?');">
                                🗑️ Eliminar
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-warning text-center mt-4 rounded-3">
                No se encontraron pedidos registrados.
            </div>
        }
    </div>
</div>

<!-- Bootstrap Icons y estilos responsivos -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<meta name="viewport" content="width=device-width, initial-scale=1">