@model IEnumerable<WebHostApplication.Models.Vendedor>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-4">Vendedores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<!-- Tabla para desktop/tablets -->
<div class="table-responsive d-none d-md-block">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Apellido1)</th>
                <th>@Html.DisplayNameFor(model => model.Apellido2)</th>
                <th>@Html.DisplayNameFor(model => model.Dir)</th>
                <th>@Html.DisplayNameFor(model => model.Tel)</th>
                <th>@Html.DisplayNameFor(model => model.CreditoT)</th>
                <th>@Html.DisplayNameFor(model => model.AbonoT)</th>
                <th>@Html.DisplayNameFor(model => model.Condicion)</th>
                <th>@Html.DisplayNameFor(model => model.Comision)</th>
                <th>@Html.DisplayNameFor(model => model.Porcentaje)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Apellido1)</td>
                    <td>@Html.DisplayFor(modelItem => item.Apellido2)</td>
                    <td>@Html.DisplayFor(modelItem => item.Dir)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tel)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreditoT)</td>
                    <td>@Html.DisplayFor(modelItem => item.AbonoT)</td>
                    <td>@Html.DisplayFor(modelItem => item.Condicion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Comision)</td>
                    <td>@Html.DisplayFor(modelItem => item.Porcentaje)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdVendedor" class="btn btn-sm btn-warning mb-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.IdVendedor" class="btn btn-sm btn-info mb-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.IdVendedor" class="btn btn-sm btn-danger mb-1">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Cards para móviles -->
<div class="d-block d-md-none">
    @foreach (var item in Model)
    {
        <div class="card mb-3 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">@item.Nombre @item.Apellido1 @item.Apellido2</h5>
                <p class="mb-1"><strong>ID:</strong> @item.Id</p>
                <p class="mb-1"><strong>Dirección:</strong> @item.Dir</p>
                <p class="mb-1"><strong>Tel:</strong> @item.Tel</p>
                <p class="mb-1"><strong>Crédito Total:</strong> @item.CreditoT</p>
                <p class="mb-1"><strong>Abono Total:</strong> @item.AbonoT</p>
                <p class="mb-1"><strong>Condición:</strong> @item.Condicion</p>
                <p class="mb-1"><strong>Comisión:</strong> @item.Comision</p>
                <p class="mb-1"><strong>Porcentaje:</strong> @item.Porcentaje</p>
                <div class="mt-2">
                    <a asp-action="Edit" asp-route-id="@item.IdVendedor" class="btn btn-warning btn-sm mb-1 w-100">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.IdVendedor" class="btn btn-info btn-sm mb-1 w-100">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.IdVendedor" class="btn btn-danger btn-sm mb-1 w-100">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
